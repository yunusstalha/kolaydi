<launch>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find motion_pkg)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find motion_pkg)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find motion_pkg)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find motion_pkg)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find motion_pkg)/config/move_base_params.yaml" command="load" />
    <rosparam file="$(find motion_pkg)/config/dwa_local_planner_params.yaml" command="load" />
  </node>
</launch>